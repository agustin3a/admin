<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name , class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, :class => "tinymce", :rows => 15, :cols => 120 %>
    <%= tinymce %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :type, :value => @type  %>
  </div>
  <div class="form-group">
    <%= f.label :price %>(Optional)
    <%= f.text_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :initial_date  %>(Optional)
    <%= f.date_field :initial_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :expiry_date %>(Optional)
    <%= f.date_field :expiry_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :link %>
    <%= f.text_field :link, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
