<div class="panel panel-default">
  <div class="panel-heading"><%= @name + "s" %></div>
    <div class="panel-body">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <% if @name == "Product" %>
            <td><%= link_to 'Show', products_show_path(item) %></td>
            <td><%= link_to products_edit_path(item) do %>
                  <span class="glyphicon glyphicon-edit"></span> Edit
                <% end %>
            </td>
          <% elsif @name == "Service" %>
            <td><%= link_to 'Show', services_show_path(item) %></td>
            <td><%= link_to services_edit_path(item) do%>
                  <span class="glyphicon glyphicon-edit"></span> Edit
      <% end %>
            </td>
          <% else %>
            <td><%= link_to 'Show', promos_show_path(item) %></td>
            <td><%= link_to promos_edit_path(item) do %>
                  <span class="glyphicon glyphicon-edit"></span> Edit
                <% end %>
            </td>
          <% end %>
          <td><%= link_to item, method: :delete, data: { confirm: 'Are you sure?' } do %>
               <span class="glyphicon glyphicon-remove"></span> Delete
      <% end %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>

  
 



